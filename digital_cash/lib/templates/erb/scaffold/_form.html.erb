<%%= form_for(<%= singular_table_name %>) do |f| %>
  <%% if <%= singular_table_name %>.errors.any? %>
    <div class="row">
      <ul class="collection with-header animated fadeInUp">
        <%% if <%= singular_table_name %>.errors.count > 1 %>
          <li class="collection-header"><h5><%%= <%= singular_table_name %>.errors.count %> erros impediram que o registro fosse salvo:</h5></li>
        <%% else %>
          <li class="collection-header"><h5><%%= <%= singular_table_name %>.errors.count %> erro impediu que o registro fosse salvo:</h5></li>
        <%% end %>
        <%% <%= singular_table_name %>.errors.full_messages.each do |message| %>
          <li class="collection-item valign-wrapper"><i class="material-icons">error_outline</i>&nbsp;<span> <%%= message %></span></li>
        <%% end %>
      </ul>
    </div>
  <%% end %>

<% attributes.each do |attribute| -%>
    <div class="input-field">
      <% if attribute.password_digest? -%>
          <%%= f.password_field :password %>
          <%%= f.label :password %>
          </div>

          <div class="input-field">
            <%%= f.password_field :password_confirmation %>
            <%%= f.label :password_confirmation %>
      <% else -%>
          <div class="row">
            <div class="col s12">
              <div class="input-field">
                <%%= f.<%= attribute.field_type %> :<%= attribute.column_name %> %>
                <%%= f.label :<%= attribute.column_name %> %>
              </div>
            </div>
          </div>
      <% end -%>
      </div>

<% end -%>

<div class="row">
  <div class="col s12 right-align">
    <%%= f.submit 'Salvar', :class=> "waves-effect waves-light btn-large" %>
    <%%= link_to 'Voltar', <%= plural_table_name %>_path, class: "waves-effect waves-light btn-large blue-grey lighten-3" %>
  </div>
</div>


<%% end %>
